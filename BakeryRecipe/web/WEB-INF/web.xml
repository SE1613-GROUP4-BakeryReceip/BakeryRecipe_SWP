<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>SITEMAPS_FILE_PATH</param-name>
        <param-value>/WEB-INF/siteMaps.properties</param-value>
    </context-param>
    <context-param>
        <param-name>AUTHENTICATION_FILE_PATH</param-name>
        <param-value>/WEB-INF/authentication.properties</param-value>
    </context-param>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>bakeryRecipe.filter.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DispatchFilter</filter-name>
        <filter-class>bakeryRecipe.filter.DispatchFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DispatchFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>bakeryRecipe.listener.ServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LikeController</servlet-name>
        <servlet-class>bakeryRecipe.controller.LikeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnlikeController</servlet-name>
        <servlet-class>bakeryRecipe.controller.UnlikeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LikeController</servlet-name>
        <url-pattern>/LikeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnlikeController</servlet-name>
        <url-pattern>/UnlikeController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error_404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error_500.html</location>
    </error-page>
</web-app>
